<div class="w-1/2"> hello  <%= current_user.email %></div>
<div class="flex ">


 <div class="flex-col  ">


   <h1 class="text-gray-900 text-xl font-sans font-bold m-2">New Room</h1>

   <%= render 'form', room: Room.new %>
   <h1 class="text-xl font-sans font-bold text-gray-900 m-3">Rooms</h1>
   <% @rooms.each do |room| %>
     <%= link_to room do %>
       <div class="flex  bg-white p-10 rounded-lg shadow-lg m-4">
         <div class="flex flex-col justify text-indigo-700 font-bold text-md ">

           <%= room.name %>

           <div class="flex text-indigo-500 font-light text-sm ">

             <div class=" underline m-2"><%= link_to 'Show', room %></div>
             <div class=" underline m-2"><%= link_to 'Edit', edit_room_path(room) %></div>
             <div class=" underline m-2"><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></div>

           </div>

         </div>


       </div>
     <% end %>
   <% end %>
 </div>



   <div class=" m-2 border border-blue-400"></div>


  <div class="flex-col w-2/5 ml-10 mt-3 ">

    <%if @room.present?%>
      <%= @room.name %>

        <div  id="room_channel">
          <%= render  partial: "room_messages/messages" , collection: @room.room_messages , as: :room_message  %>
        </div>



      <div class="absolute bottom-1 ">

        <%= render "room_messages/form" , room_message: RoomMessage.new %>

      </div>




    <%end %>
  </div>


</div>



