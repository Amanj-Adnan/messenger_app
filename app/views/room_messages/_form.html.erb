<div class="text-indigo-700 text-m font-sans font-bold">
  <%= form_with(model: room_message ,class:"w-full max-w-xs bg-white flex flex-col py-5 px-8 rounded-lg shadow-lg") do |form| %>
    <% if room_message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(room_message.errors.count, "error") %> prohibited this room from being saved:</h2>

        <ul>
          <% room_message.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="">
      <%= form.label :message %>
      <%= form.text_field :message ,class:"text-gray-700 shadow border rounded border-gray-300 focus:outline-none focus:shadow-outline py-1 px-3 mb-3"%>
    </div>
    <%= form.hidden_field :room_id , value: @room.id%>
    <div class="">
      <%= form.submit "Send Message" , class:"bg-indigo-500 hover:bg-indigo-700 text-white font-bold rounded py-2 px-4"%>
    </div>
  <% end %>
</div>